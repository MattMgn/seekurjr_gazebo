<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="seekurjr" >

  <gazebo reference="imu_link">
    
    
    <sensor name="imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>1000.0</update_rate>
      <imu>
        <noise>
        
        <type> none </type>
        
        <!--
          <type>gaussian</type>
          
          <rate>
            <mean>0.0</mean>
            <stddev>2e-4</stddev>
            <bias_mean>0.0000075</bias_mean>
            <bias_stddev>0.0000008</bias_stddev>
          </rate>
          <accel>
            <mean>0.0</mean>
            <stddev>1.7e-2</stddev>
            <bias_mean>0.1</bias_mean>
            <bias_stddev>0.001</bias_stddev>
          </accel>
          -->
          
        </noise>
      </imu>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin filename="libgazebo_ros_imu.so" name="gazebo_ros_imu">
      <bodyName>imu_link</bodyName>
      <updateRate>1</updateRate>
      <serviceName>imu</serviceName>
      <topicName>/seekurjr/imu</topicName>
      <gaussianNoise>0</gaussianNoise>
      <xyzOffset>0 0 0</xyzOffset>
      <!--
      <rpyOffset>0 0 -0.703220730592</rpyOffset>
      -->
      <rpyOffset>0 0 0</rpyOffset>
    </plugin>     
  </gazebo>  
  
 </robot>
