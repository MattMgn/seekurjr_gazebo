<?xml version="1.0"?>

<robot name="seekurjr" xmlns:xacro="http://www.ros.org/wiki/xacro"> 

  <gazebo reference="lms1xx_link">
    <sensor type="ray" name="lms1xx">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>20</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-2.35619449</min_angle>
            <max_angle>2.35619449</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.50</min>
          <max>20.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
				
				<!--
				<type> none </type>
				-->
				
        <!-- Noise parameters based on published spec for Hokuyo laser
             achieving "+-30mm" accuracy at range < 10m. A mean of 0.0m and
             stddev of 0.01m will put 99.7% of samples within 0.03m of the true
             reading. --> 
        
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
         
         
        </noise>
      </ray>
      <plugin name="gazebo_ros_lms1xx_controller" filename="libgazebo_ros_laser.so">
        <topicName>/seekurjr/lms1xx/scan</topicName>
        <frameName>lms1xx_link</frameName>
      </plugin>
    </sensor>
  </gazebo>
  
</robot>
